<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xsolla.android.sdk.directpayment.status.DirectPaymentStatusFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xsolla_correct"
        android:gravity="center_vertical"
        android:id="@+id/statusHeader">

        <ImageView
            android:layout_width="@dimen/xsolla_base_64"
            android:layout_height="@dimen/xsolla_base_64"
            android:layout_margin="@dimen/xsolla_base_8"
            app:srcCompat="@drawable/xsolla_ic_success"
            android:contentDescription="@null"
            android:id="@+id/ivStatus"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivStatus"
            android:layout_toEndOf="@+id/ivStatus">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/xsolla_white"
                android:textSize="@dimen/xsolla_textMedium"
                android:textStyle="bold"
                android:text="Your plan will be changed at the end of the billing period"
                android:id="@+id/text1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/xsolla_white"
                android:textSize="@dimen/xsolla_textMedium"
                android:text="You purchased false for 10.00  RUB"
                android:id="@+id/text2"/>
        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xsolla_base_16">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/xsolla_base_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xsolla_base_8"
                android:text="Title 1"
                android:id="@+id/text3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xsolla_base_8"
                android:text="SubTitle 1"
                android:id="@+id/text4"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"/>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/xsolla_divider"-->
                <!--android:layout_marginTop="@dimen/xsolla_base_8"/>-->

            <!--<FrameLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/xsolla_base_8">-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="@dimen/xsolla_textMedium"-->
                    <!--android:text="Text 1"/>-->


                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="@dimen/xsolla_textMedium"-->
                    <!--android:layout_gravity="end"-->
                    <!--android:text="Text 2"/>-->

            <!--</FrameLayout>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        style="@style/xsolla_ButtonPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xsolla_base_16"
        android:layout_gravity="center_horizontal"
        android:text="ACTION TEXT 1"
        android:id="@+id/button1"/>

</LinearLayout>
