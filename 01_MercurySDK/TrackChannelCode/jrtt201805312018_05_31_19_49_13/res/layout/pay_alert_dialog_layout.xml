<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pay_dialog_bg">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/pay_exit_alert_dialog_title_size"
        android:textColor="@color/pay_exit_alert_dialog_title_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/pay_alert_dialog_title">
    </TextView>
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:textSize="@dimen/pay_exit_alert_dialog_content_size"
        android:textColor="@color/pay_exit_alert_dialog_content_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/pay_alert_dialog_content">
    </TextView>
    <View 
        android:id="@+id/divider"
        android:layout_below="@+id/content"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/pay_dialog_item_divider"/>
    <LinearLayout 
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/divider"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/button_cancle"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/pay_alert_dialog_button_left_bg"
            android:textSize="@dimen/pay_exit_alert_dialog_button_textsize"
            android:textColor="@color/pay_exit_alert_dialog_cancle_color"
            android:text="@string/pay_alert_dialog_cancle">
        </TextView>
        <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/pay_dialog_item_divider"/>
        <TextView
            android:id="@+id/button_continue"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/pay_alert_dialog_button_right_bg"
            android:textSize="@dimen/pay_exit_alert_dialog_button_textsize"
            android:textColor="@color/pay_exit_alert_dialog_continue_color"
            android:text="@string/pay_alert_dialog_continue">
        </TextView>
    </LinearLayout>
</RelativeLayout>
