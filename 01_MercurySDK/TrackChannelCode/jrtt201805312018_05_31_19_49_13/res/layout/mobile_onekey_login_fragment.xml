<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/login_mask_bg"
              android:orientation="vertical">

    <com.ss.android.sdk.common.ui.view.SwipeOverlayFrameLayout
        android:id="@+id/swipe_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/login_panel"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/title"
                    style="@style/login_panel_title"/>
                <TextView
                    android:id="@+id/title_desc"
                    style="@style/login_panel_desc"
                    android:text="@string/onekey_send_sms_info"/>

                <TextView
                    android:id="@+id/one_key_login"
                    style="@style/login_panel_button"
                    android:layout_marginTop="15dp"
                    android:text="@string/onekey_send_sms_btn"/>

                <LinearLayout
                    android:id="@+id/user_agreement_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/onekey_align_left"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="15dp"
                        style="@style/mobile_accent_link_text"
                        android:textColor="@color/heise2"/>

                    <TextView
                        android:id="@+id/to_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="15dp"
                        android:text="@string/onekey_to_normal"
                        style="@style/mobile_accent_link_text"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </com.ss.android.sdk.common.ui.view.SwipeOverlayFrameLayout>


</LinearLayout>