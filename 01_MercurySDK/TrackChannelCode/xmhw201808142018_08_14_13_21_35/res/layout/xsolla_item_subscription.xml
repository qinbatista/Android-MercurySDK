<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/xsolla_base_16">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xsolla_base_16">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xsolla_base_4"
                android:background="@color/xsolla_best"
                android:textSize="@dimen/xsolla_textMini"
                android:textColor="@color/xsolla_white"
                android:padding="@dimen/xsolla_base_4"
                android:textAllCaps="true"
                android:text="Best offer"
                android:id="@+id/tvLabel"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/xsolla_textMini"
                android:textColor="@color/xsolla_purple_m"
                android:text="Current subscription"
                android:id="@+id/tvActive"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Title 1"
                android:id="@+id/text1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xsolla_base_4"
                android:layout_below="@id/text1"
                android:textSize="@dimen/xsolla_textMini"
                android:text="SubTitle 1"
                android:id="@+id/text2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/text4"
                android:layout_toStartOf="@+id/text4" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/xsolla_textMini"
                android:text="SubTitle 2"
                android:id="@+id/text4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Title 2"
                android:id="@+id/text3"
                android:layout_alignBottom="@+id/text2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>