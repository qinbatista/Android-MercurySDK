<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AmanitaDesign.Machinarium.E2W"
    android:installLocation="preferExternal"
    android:versionCode="56324"
    android:versionName="1.2" >
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />
    <uses-feature
        android:name="android.hardware.type.television"
        android:required="true" />
    <application
        android:name="com.east2west.testapp.GameSdkApplication"
        android:label="@string/app_name"
        android:icon="@drawable/app_icon">
        <activity
            android:name="com.east2west.testapp.MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data android:name="E2W_LOG" android:value="open"/>
        <!--sdk-->
        <activity
            android:name="com.xsolla.android.sdk.view.XsollaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/xsolla_app_name"
            android:theme="@style/xsolla_SDKTheme.NoActionBar" />
        <activity
            android:name="com.xsolla.android.sdk.profile.ProfileActivity"
            android:label="@string/xsolla_activity_profile_title" />
        <activity
            android:name="com.xsolla.android.sdk.payment.PaymentMethodsActivity"
            android:label="@string/xsolla_activity_payment_methods" />
        <activity
            android:name="com.xsolla.android.sdk.directpayment.DirectPaymentActivity"
            android:label="@string/xsolla_activity_direct_payment" />
        <activity
            android:name="com.xsolla.android.sdk.profile.managesubscriptions.subscriptiondetails.SubscriptionDetailsActivity"
            android:label="@string/xsolla_activity_user_sbscription_details" />
        <activity android:name="com.xsolla.android.sdk.shop.subscriptions.SubscriptionsActivity" />

        <meta-data android:name="MiLinkGroupAppID"       android:value="@integer/MiLinkGroupAppID" />

        <activity
            android:name="com.xiaomi.gamecenter.sdk.ui.MiActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <!--end-->
    </application>
    <!--sdkxml-->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!--end-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-feature android:glEsVersion="0x00020000" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen.multitouch"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen.multitouch.distinct"
        android:required="false" />

</manifest>