<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:bottom="40dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/xsolla_text_main" />
                <size android:width="2dp"/>
            </shape>
        </rotate>
    </item>

    <item
        android:top="0dp"
        android:bottom="-40dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>