<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/vivo_game_common_dialog_width"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vivo_game_dialog_close_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/vivo_game_common_dialog_title_close_right"
        android:paddingTop="@dimen/vivo_game_common_dialog_title_close_top"
        android:src="@drawable/vivo_game_dialog_close_icon"/>

    <RelativeLayout
        android:id="@+id/vivo_game_common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vivo_game_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/vivo_game_common_dialog_title_view_paddingTop"
            android:paddingBottom="@dimen/vivo_game_common_dialog_title_view_paddingBottom"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vivo_game_common_dialog_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vivo_game_common_dialog_title"
        android:layout_marginLeft="@dimen/vivo_game_dialog_content_padding_left"
        android:layout_marginRight="@dimen/vivo_game_dialog_content_padding_left"
        android:paddingBottom="@dimen/vivo_game_common_dialog_content_margin_bottom">

        <TextView
            android:id="@+id/vivo_game_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/vivo_game_common_dialog_content_view_lineSpacing"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textSize="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vivo_game_common_dialog_button_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vivo_game_common_dialog_content_view"
        android:layout_marginLeft="@dimen/vivo_game_dialog_btn_margin_left"
        android:layout_marginRight="@dimen/vivo_game_dialog_btn_margin_left"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="@dimen/vivo_game_dialog_btn_margin_bottom">

        <Button
            android:id="@+id/vivo_game_dialog_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/vivo_game_dialog_button_height"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vivo_game_dialog_ok_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/vivo_game_common_dialog_btn_textsize" />

    </RelativeLayout>
</RelativeLayout>