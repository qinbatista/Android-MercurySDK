<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/update_fail"
    android:layout_width="325dp"
    android:layout_height="132.5dp"
    android:layout_gravity="center"
    android:background="@drawable/game_bg_corner_white100">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:text="@string/update_fail"
        android:textSize="16dp"
        android:textColor="@color/black_87"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/update_fail_cancel"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:text="@string/cancelaqy"
        android:background="@drawable/game_bg_green_hollow"
        android:textColor="@color/text_color_green"
        android:layout_marginTop="72.5dp"
        android:layout_marginStart="30dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/update_fail_retry"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="@string/retry"
        android:background="@drawable/game_corner_green_button"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/update_fail_cancel"
        android:layout_marginTop="72.5dp" />

</RelativeLayout>