<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/detail_title_bar_style" >

    <TextView
        android:id="@+id/back"
        style="@style/detail_back_view" />

    <ImageView
        android:id="@+id/back_finish"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/back"
        android:src="@drawable/close_video_details_night"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title"
        style="@style/deail_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="用户ID"
        android:textColor="@color/game_browser_title_text_color"
        android:textSize="@dimen/game_browser_title_font"/>

    <TextView
        android:id="@+id/right_text"
        style="@style/title_bar_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/btn_more_title_detail"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/right_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:indeterminateOnly="true"
        android:layout_marginRight="15dp"
        android:visibility="gone" />

</RelativeLayout>