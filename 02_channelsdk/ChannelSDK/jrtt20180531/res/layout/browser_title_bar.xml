<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/detail_title_bar_style" >

    <TextView
        android:id="@+id/back"
        style="@style/detail_back_view" />

    <TextView
        android:id="@+id/title"
        style="@style/deail_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/right_text"
        style="@style/title_bar_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/btn_more_title_detail" />

    <ProgressBar
        android:id="@+id/right_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:indeterminateOnly="true"
        android:layout_marginRight="15dp"
        android:visibility="gone" />

</RelativeLayout>